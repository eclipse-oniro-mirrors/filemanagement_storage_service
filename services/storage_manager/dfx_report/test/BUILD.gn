import("//build/test.gni")
import("//foundation/filemanagement/storage_service/storage_service_aafwk.gni")

ohos_unittest("dfx_report_test") {
  branch_protector_ret = "pac_ret"
  sanitize = {
    integer_overflow = true
    ubsan = true
    boundary_sanitize = true
    cfi = true
    cfi_cross_dso = true
    debug = false
    blocklist = "${storage_service_path}/cfi_blocklist.txt"
  }
  module_out_path = "storage_service/storage_service/storage_manager"

  sources = [
    "${storage_manager_path}/mock/storage_deamon_communication_mock.cpp",
    "${storage_manager_path}/mock/storage_status_manager_mock.cpp",
    "${storage_manager_path}/dfx_report/storage_dfx_reporter.cpp",
    "${storage_service_path}/test/unittest/mock/src/storage_total_status_service_mock.cpp",
    "storage_dfx_reporter_test.cpp",
  ]

  defines = [
    "STORAGE_LOG_TAG = \"StorageManager\"",
    "LOG_DOMAIN = 0xD004300",
    "private = public",
  ]
  include_dirs = [
    "include",
    "${storage_interface_path}/innerkits/storage_manager/native",
    "${storage_daemon_path}/include",
    "${storage_service_common_path}/include",
    "${storage_manager_path}/include/common_event",
    "${storage_manager_path}/include/rdb_adapter",
    "${storage_manager_path}/include/storage",
    "${storage_service_path}/test/unittest/mock/include",
  ]

  deps = [
    "${storage_daemon_path}:storage_common_utils",
    "${storage_daemon_path}:storage_daemon_ipc",
    "${storage_interface_path}/innerkits/storage_manager/native:storage_manager_sa_proxy",
    "${storage_manager_path}:storage_manager",
  ]

  external_deps = [
    "ability_base:base",
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:extensionkit_native",
    "access_token:libaccesstoken_sdk",
    "appspawn:appspawn_client",
    "cJSON:cjson",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "googletest:gmock_main",
    "googletest:gtest_main",
    "hilog:libhilog",
    "hitrace:hitrace_meter",
    "ipc:ipc_single",
    "os_account:os_account_innerkits",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
    "relational_store:native_rdb",
  ]
}

group("storage_manager_dfx_report_test") {
  testonly = true
  deps = [ ":dfx_report_test" ]
}